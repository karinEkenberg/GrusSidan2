@model List<GrusSidan.Classes.Product> 

@{
    ViewData["Title"] = "Kundvagn";
}

<h2>Kundvagn</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Pris</th>
                <th>Åtgärder</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price kr</td>
                    <td>
                        <button class="remove-from-cart" data-product-id="@product.ProductID">Ta bort</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Din kundvagn är tom.</p>
}
